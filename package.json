{
  "name": "@prismamedia/ts-module-loader",
  "license": "UNLICENSED",
  "author": "Yvann Boucher <y.bouche@prismamedia.com>",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/prismamediadigital/one/ts-module-loader"
  },
  "main": "dist/lib/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "./node_modules/.bin/jest --verbose",
    "test-watch": "npm run test -- --watchAll",
    "build": "./node_modules/.bin/tsc -p ./tsconfig.prod.json",
    "prettier": "./node_modules/.bin/prettier --write \"**/*.ts\""
  },
  "dependencies": {
    "@types/node": "^10.5.2",
    "core-js": "*"
  },
  "devDependencies": {
    "@types/core-js": "*",
    "@types/jest": "^23.1.6",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.0",
    "typescript": "^3.0.1"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
