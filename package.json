{
  "name": "@prismamedia/ts-module-loader",
  "license": "UNLICENSED",
  "author": "Yvann Boucher <y.bouche@prismamedia.com>",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/prismamediadigital/one/ts-module-loader"
  },
  "main": "dist/lib/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "./node_modules/.bin/jest --verbose",
    "test-watch": "npm run test -- --watchAll",
    "build": "./node_modules/.bin/tsc -p ./tsconfig.prod.json",
    "prettier": "./node_modules/.bin/prettier --write \"**/*.ts\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "23.3.2",
    "@types/node": "10.9.4",
    "jest": "^23.6.0",
    "prettier": "^1.13.7",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
